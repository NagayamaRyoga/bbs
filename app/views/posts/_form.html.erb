<%= form_with(model: post, local: true) do |form| %>
  <% if flash[:errors] %>
    <% flash[:errors].each do |name, messages| %>
      <%= name %>
      <%= messages %>
    <% end %>
  <% end %>

  <%= form.text_field :user_name, :placeholder => "名前", :required => true, :maxlength => 128 %>
  <%= form.text_area :content, :placeholder => "コメント", :required => true, :maxlength => 1024  %>
  <%= form.submit "投稿" %>
<% end %>
